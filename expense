def expense():
    expense_list = {
        "food": [],
        "housing": [],
        "clothing": [],
        "transportation": [],
        "entertainment": [],
        "saving": [],
    }

    # user input
    category = input("Which expense category: ")
    items = input("What is your item: ")
    price = float(input("How much does it cost: "))

    if category in expense_list:
        expense_list[category].append({
            "item": items,
            "price": price
        })
    else:
        print("Enter a valid category")

    return expense_list


expenses = expense()
print(expenses)
