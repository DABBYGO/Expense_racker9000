def expense():
    expense_list = {
        "food": [],
        "housing": [],
        "clothing": [],
        "transportation": [],
        "entertainment": [],
        "saving": [],
    }

    # user input
    while True:
        category = input("Which expense category: ")

        if category not in expense_list:
            print("enter a category")
            continue
        items = input("What is your item: ")
        price = float(input("How much does it cost: "))


        expense_list[category].append({
            "item": items,
            "price": price
        })

 
        add = input("add more category:yes/no:")
        if add in ("n", "no"):
            break

        elif add in ("y", "yes"):
            continue

        else:
            print("enter y or n")

    return expense_list


expenses = expense()
for category, items in expenses.items():
    print(f"\n{category}:")
    for x in items:
        print(f"{x['item']}: {x['price']}")





Total_Expenses = sum(item["Amount"]for item in expense)
print (f"total amount: ${Total_Expenses}")

